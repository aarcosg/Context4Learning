<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/narrow_space"
    android:clickable="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding"
        android:background="?selectableItemBackground">

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="sans-serif-light"
            android:text="Android course"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/narrow_space">

            <ProgressBar
                android:id="@+id/course_progress"
                style="@style/CourseProgressBar"/>

            <TextView
                android:id="@+id/course_progress_val"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center"
                android:layout_alignBottom="@id/course_progress"
                android:layout_alignTop="@id/course_progress"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
